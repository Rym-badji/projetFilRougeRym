{% extends 'base.html.twig' %}

{% block title %}Liste des projets{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center m-4">
            <h1>Liste des projets</h1>

            <!-- Légende des états -->
            <div class="d-flex align-items-center">
                <span class="badge bg-primary me-2"><i class="dot bg-primary"></i> Terminé</span>
                <span class="badge bg-warning text-dark me-2"><i class="dot bg-warning"></i> En cours</span>
                <span class="badge bg-danger"><i class="dot bg-danger"></i> En retard</span>
            </div>
        </div>

        {# section mes projets #}
        <div class="col-md-3">
            <h2>Filter</h2>
            {{ form(f) }}

        </div>
        <div class="col-md-9">
            <div class="row">
                <h4>Employés</h4>
                {% for user in users %}
                    <div class="col-md-4 text-center">
                        <h5>{{ user.matricule }}</h5>
                        <h5>{{ user.firstName }}</h5>
                        <h5>{{ user.lastName }}</h5>
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>
{% endblock %}

