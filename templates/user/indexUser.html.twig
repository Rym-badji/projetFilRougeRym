{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-4 mb-4">Mon profil</h1>

        <div class="d-flex justify-content-center align-items-center mb-4">
            {% if app.user %}
                <div class="d-flex justify-content-between align-items-center gap-4">

                    {% if app.user.photo %}
                        <img src="{{ asset(user.photo) }}" alt="Photo de {{ user.firstName }}" 
                        style="width: 200px; height: 200px; object-fit: cover; border-radius: 50%;">
                    {% endif %}
                    <div class="card shadow-sm" style="width: 250px; height: 200px">
                        <div class="card-body">
                            <h5 class="card-title">{{ app.user.firstName }} {{ app.user.lastName }}</h5>
                            <p class="card-text"><strong>Email :</strong> {{ app.user.email }}</p>
                            <p class="card-text"><strong>Service :</strong> {{ app.user.service }}</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <a href="{{ path('app_user_show', {'id': app.user.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                                <a href="{{ path('app_user_edit', {'id': app.user.id}) }}" class="btn btn-secondary btn-sm">Modifier</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-warning text-center">Aucun utilisateur trouv√©</div>
            {% endif %}
        </div>

        <div class="text-center mb-4">
            <a href="{{ path('app_adress_new') }}" class="btn btn-info mt-3">
                <i class="bi bi-house-door-fill"></i> Ajouter une adresse
            </a>
            <a href="{{ path('app_projet_index')}}" class="btn btn-danger mt-3">Aller sur mes projets</a>
        </div>
    </div>
{% endblock %}