{% extends 'base.html.twig' %}

{% block title %}Détails de l'adresse{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Détails de l'adresse</h1>

        <div class="d-flex justify-content-center align-items-center min-vh-100">
            <div class="card shadow-sm" style="width: 350px;">
                <div class="card-body">
                    <h5 class="card-title text-center">{{ adress.title }}</h5>
                    <p class="card-text text-center"><strong>Prénom :</strong> {{ adress.fname }}</p>
                    <p class="card-text text-center"><strong>Nom :</strong> {{ adress.lname }}</p>
                    <p class="card-text text-center"><strong>Adresse :</strong> {{ adress.address }}</p>
                    <p class="card-text text-center">
                        <strong>Ville :</strong> {{ adress.city }}<br>
                        <strong>Code postal :</strong> {{ adress.cp }}<br>
                        <strong>Pays :</strong> {{ adress.country }}
                    </p>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <a href="{{ path('app_adress_edit', {'id': adress.id}) }}" class="btn btn-secondary btn-sm">Modifier</a>
                        {{ include('adress/deleteAdress.html.twig') }}
                    </div>
                    <a href="{{ path('app_adress_index') }}" class="btn btn-primary btn-sm mt-3">Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

