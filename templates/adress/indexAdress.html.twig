{% extends 'base.html.twig' %}

{% block title %}Liste des adresses{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Liste des adresses</h1>

        <div class="d-flex justify-content-center align-items-center flex-wrap mt-4">
            {% for adress in app.user.adresses %}
                <div class="card shadow-sm m-3" style="width: 250px;">
                    <div class="card-body">
                        <h5 class="card-title">{{ adress.title }}</h5>
                        <p class="card-text"><strong>Nom :</strong> {{ adress.fname }} {{ adress.lname }}</p>
                        <p class="card-text"><strong>Adresse :</strong> {{ adress.address }}</p>
                        <p class="card-text">
                            <strong>Ville :</strong> {{ adress.city }}<br>
                            <strong>Code postal :</strong> {{ adress.cp }}<br>
                            <strong>Pays :</strong> {{ adress.country }}
                        </p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <a href="{{ path('app_adress_show', {'id': adress.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                            <a href="{{ path('app_adress_edit', {'id': adress.id}) }}" class="btn btn-secondary btn-sm">Modifier</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-warning text-center">Aucune adresse trouvée</div>
                </div>
            {% endfor %}
        </div>

        <div class="text-center">
            <a href="{{ path('app_adress_new') }}" class="btn btn-success mt-3">Créer une nouvelle adresse</a>
            <a href="{{ path('app_profil')}}" class="btn btn-info mt-3">Retourner sur mon profil</a>
            <a href="{{ path('app_user_index')}}" class="btn btn-info mt-3">Retourner sur mes coordonnés</a>
            <a href="{{path('app_projet_index')}}" class="btn btn-info mt-3">Retourner sur la liste de mes projets</a>
        </div>
    </div>
{% endblock %}

